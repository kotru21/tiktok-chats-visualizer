{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Целевая платформа - Node.js
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Библиотеки для Node.js
    "lib": ["ES2022"],
    "types": ["node", "mocha"],

    // Пути вывода
    "outDir": "./dist/server",
    "rootDir": ".",

    // Для project references
    "composite": true,
    "declarationDir": "./dist/server/types",

    // Разрешаем JS для постепенной миграции
    "allowJs": true,
    "checkJs": false
  },
  "include": ["server.ts", "utils/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules", "dist", "public", "tests"]
}
