{
  "name": "chat-analyzer",
  "version": "1.5.0",
  "type": "module",
  "main": "dist/server/server.js",
  "scripts": {
    "start": "node dist/server/server.js",
    "start:dev": "tsx watch server.ts",
    "dev": "concurrently \"npm run start:dev\" \"npm run dev:client\"",
    "dev:client": "vite",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "preview": "vite preview",
    "test": "cross-env NODE_OPTIONS=\"--import tsx\" mocha \"tests/**/*.test.ts\" --exclude \"tests/colorScheme.test.ts\" --exclude \"tests/theme.test.ts\"",
    "test:js": "mocha \"tests/**/*.test.js\" --exclude \"tests/colorScheme.test.js\" --exclude \"tests/theme.test.js\"",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "typecheck:server": "tsc -p tsconfig.server.json --noEmit",
    "typecheck:client": "tsc -p tsconfig.client.json --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Анализатор и визуализатор чатов TikTok",
  "dependencies": {
    "chart.js": "^4.5.1",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "moment": "^2.30.1",
    "multer": "^2.0.2",
    "stream-chain": "^3.4.0",
    "stream-json": "^1.9.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/jsdom": "^27.0.0",
    "@types/mocha": "^10.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "mocha": "^11.7.5",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.6"
  }
}
