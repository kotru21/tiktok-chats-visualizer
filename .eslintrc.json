{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "globals": {
    "Chart": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-undef": "error",
    "eqeqeq": ["warn", "always"],
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-console": ["off"]
  },
  "ignorePatterns": ["public/vendor/**", "node_modules/**", "**/*.min.js"]
}
